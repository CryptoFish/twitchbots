{% extends "_base.twig" %}
{% block title %}Submissions{% endblock %}
{% block extraresources %}
<link rel="canonical" href="https://twitchbots.info/submissions">
{% endblock %}
{%block content %}
<div class="page-header">
    <h1>Submission Queue</h1>
</div>
<dl class="dl-horizontal">
{% for s in submissions %}
    <dt><a href="https://twitch.tv/{{ s.name|e('url')|e('html_attr') }}" title="{{ s.name|e('html_attr') }} on Twitch" rel="external">{{ s.name|e }}</a></dt>
    <dd>{{ s.description|e }}{% if s.channel is not empty %} <a href="https://twitch.tv/{{ s.channel|e('url')|e('html_attr') }}/chat" rel="external">{{ s.channel|e }}</a>{% endif %}</dd>
{% endfor %}
</dl>
{% endblock %}
