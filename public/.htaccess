Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "DENY"
<If "%{HTTP_HOST} =~ /^(www\.)?twitchbots.info$/">
    SetEnv MODE production
    Header set Strict-Transport-Security "max-age=10886400; includeSubDomains; preload"
    Header set Content-Security-Policy "default-src 'none'; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self'; frame-ancestors 'none'; connect-src https://api.twitchbots.info; base-uri https://twitchbots.info; reflected-xss block; form-action 'self'"
</If>
<Else>
    SetEnv MODE development
    Header set Content-Security-Policy "default-src 'none'; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self'; connect-src https://api.twitchbots.info; form-action 'self'; frame-ancestors 'none'; reflected-xss block"
</Else>

RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.php [QSA,L]
